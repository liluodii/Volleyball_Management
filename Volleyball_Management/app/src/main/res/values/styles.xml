<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NavigationDrawerStyle">

        <item name="android:textSize">@dimen/_12sdp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/_40sdp</item>
        <item name="listPreferredItemHeightSmall">@dimen/_40sdp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">@dimen/_10sdp</item>
        <item name="listPreferredItemPaddingLeft">@dimen/_10sdp</item>

<!--        &lt;!&ndash; item padding right in menu&ndash;&gt;-->
<!--        <item name="android:listPreferredItemPaddingRight">8dp</item>-->
<!--        <item name="listPreferredItemPaddingRight">8dp</item>-->

    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!--<item name="android:colorPrimary">@color/white_color</item>-->
    </style>

</resources>
